<h1>Create a New Post</h1>
<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %>
  <%= f.text_field :content %><br>
  <%= f.label :likes %>
  <%= f.number_field :likes %><br>

  <h3>Select a Destination</h3>
  <%= f.collection_select(:destination_id, Destination.all, :id, :name, prompt: true) %>
  <br>
  <h3>Select a Blogger</h3>
  <%= f.collection_select(:blogger_id, Blogger.all, :id, :name, prompt: true) %>

  <br>
  <br>
  <br>
  <%= f.submit "Create Post" %>
<% end %>